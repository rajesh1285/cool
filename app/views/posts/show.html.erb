<div class="col-md-12">
<%= image_tag@post.image.url(:medium)%>
<h1 class="title">
<%= @post.title %>
</h1>
<p class="date">
Submitted<%= time_ago_in_words(@post.created_at)%>Ago
</p>
<p>
<%=@post.body%>
</p>

</div> 
<div class="col-md-9">
<div id="comments">

	<h2><%= @post.comments.count %> Comments</h2>
	
		<%= render @post.comments %>
   
   <% if user_signed_in? %>
	
	<h3>Add a comment:</h3>
	    <%= render "comments/form" %>
    </div>
 <br>
 
   <%= link_to 'Edit', edit_post_path(@post) , class: "button"%> | <%= link_to 'Destroy', post_path(@post), class: "button",
          method: :delete,
          data: { confirm: 'Are you sure?' } %> | <%=link_to "Back",root_path , class: "button"%>	
  <%end%>
</div>